<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/plantSpeciesPicture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/border_round"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logo_pot" />

    <TextView
        android:id="@+id/plantSpeciesName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:fontFamily="@font/seoul_namsan_long_b"
        android:text="식물 종 이름"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintStart_toEndOf="@+id/plantSpeciesPicture"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/plantSpeciesManageLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="⭐⭐⭐"
        android:textColor="@color/black"
        android:textSize="21dp"
        app:layout_constraintStart_toEndOf="@+id/plantSpeciesPicture"
        app:layout_constraintTop_toBottomOf="@+id/plantSpeciesName" />

</androidx.constraintlayout.widget.ConstraintLayout>