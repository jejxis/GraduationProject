<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="sunshineRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_sunshine_body</item>
        <item name="android:minHeight">64dip</item>
        <item name="android:maxHeight">64dip</item>
        <item name="android:numStars">5</item>
    </style>

    <style name="waterRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_water_body</item>
        <item name="android:minHeight">64dip</item>
        <item name="android:maxHeight">64dip</item>
        <item name="android:numStars">5</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
</resources>